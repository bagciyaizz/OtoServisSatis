@model CustomerLoginViewModel
@{
    ViewData["Title"] = "Üye Girişi";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-4 col-md-6">
        <div class="card shadow-lg border-0 bg-dark text-light">
            <div class="card-header bg-dark border-0">
                <h3 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> @ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-warning mb-2"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control bg-secondary-subtle border-0 text-dark" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sifre" class="form-label"></label>
                        <input asp-for="Sifre" class="form-control bg-secondary-subtle border-0 text-dark" type="password" />
                        <span asp-validation-for="Sifre" class="text-warning"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-main btn-lg mt-3">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
