@model IEnumerable<Arac>
@{
    ViewData["Title"] = "Favorilerim";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-10 col-md-11">
        <div class="card shadow-lg border-0 bg-dark text-light">
            <div class="card-header bg-dark border-0 d-flex align-items-center">
                <h3 class="mb-0 flex-grow-1"> Favorilerim</h3>
            </div>
            <div class="card-body p-4">
                @if (Model is not null && Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle mb-0 bg-light text-dark">
                            <thead>
                                <tr>
                                    <th style="min-width:180px;">Araç</th>
                                    <th>Resim</th>
                                    <th style="width:80px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a class="nav-link text-dark fw-semibold" href="/Arac/Index/@item.Id">
                                                @item.Marka.Adi @item.Modeli @item.Renk @item.KasaTipi
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Img/Cars/@item.Resim1" target="_blank">
                                                <img src="/Img/Cars/@item.Resim1" alt="@item.Modeli" height="44" style="object-fit:contain; border-radius:6px; box-shadow:0 1px 6px #0002;">
                                            </a>
                                        </td>
                                        <td>
                                            <form action="/Favorites/Remove" method="post" class="d-inline">
                                                <input type="hidden" name="aracId" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Favorilerden çıkar">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center py-4">
                        <h4><i class="bi bi-emoji-frown"></i> Favorilerinizde araç yok!</h4>
                        <p>Dilerseniz <a href="/tum-araclarimiz" class="btn btn-main btn-sm ms-2">Tüm Araçlar</a> sayfasından favorilerinize araç ekleyebilirsiniz.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
