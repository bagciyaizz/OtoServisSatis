@model OtoServisSatis.Entities.Servis
@{
    ViewData["Title"] = "Randevu Talep Formu";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 bg-dark text-light">
            <div class="card-header bg-dark border-0">
                <h3 class="mb-0"><i class="bi bi-calendar2-plus"></i> @ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                @Html.Raw(TempData["Message"])
                <form asp-action="Index" method="post" autocomplete="off" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Marka" class="form-label"></label>
                        <input asp-for="Marka" class="form-control bg-secondary-subtle border-0 text-dark" />
                        <span asp-validation-for="Marka" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control bg-secondary-subtle border-0 text-dark" />
                        <span asp-validation-for="Model" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AracPlaka" class="form-label"></label>
                        <input asp-for="AracPlaka" class="form-control bg-secondary-subtle border-0 text-dark" />
                        <span asp-validation-for="AracPlaka" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AracSorunu" class="form-label"></label>
                        <input asp-for="AracSorunu" class="form-control bg-secondary-subtle border-0 text-dark" />
                        <span asp-validation-for="AracSorunu" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Notlar" class="form-label">Kişisel Bilgiler</label>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <textarea asp-for="Notlar" class="form-control bg-secondary-subtle border-0 text-dark" style="height: 90px" readonly></textarea>
                        }
                        else
                        {
                            <textarea asp-for="Notlar" class="form-control bg-secondary-subtle border-0 text-dark" style="height: 90px" placeholder="Ad, Soyad, Telefon yazınız"></textarea>
                        }
                        <span asp-validation-for="Notlar" class="text-warning"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-main btn-lg">
                            <i class="bi bi-send"></i> Randevu Talebini Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

